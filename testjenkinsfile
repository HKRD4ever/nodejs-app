pipeline {
    agent { docker { image 'node:14' args '-u root:root' } }
    stages {
        stage('Dep install') {            
            steps {
                // Ensure correct permissions for npm
                sh 'chown -R root:root /usr/local/lib/node_modules /usr/local/bin /usr/local/share'
                // Install npm dependencies
                sh 'npm install'
            }
        }
        stage('Package') {
            steps {
                // Package the application
                sh 'npm pack'
            }
        }
    }
    post {
        always {
            // Add at least one step here, such as a simple echo statement
            echo 'Build completed'
        }
    }
}



